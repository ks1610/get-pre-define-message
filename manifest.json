{
  "manifest_version": 3,
  "name": "Quick Response Bot",
  "version": "2.1",
  "description": "Quickly respond to common questions",
  "icons": {
    "48": "icon.png",
    "64": "icon.png"
  },
  "permissions": ["sidePanel"],
  "host_permissions": [
    "https://docs.google.com/*"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Open Bot"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Open Bot"
    }
  }
}